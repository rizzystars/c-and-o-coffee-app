
html, body, #root { height: 100%; }
/* Fixed background across the whole app */
body {
  margin: 0;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  background-attachment: initial; /* keep image static while content scrolls */
}

/* Make main app containers transparent so the background shows through */

/* --- enforced by cleanup script --- */
body {
  background: #000 !important;
  background-image: none !important;
  background-attachment: initial !important;
}
